generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model InviteCode {
    code String @id
    guildId String
    userId String
    
    uses Int @default(0)

    counterId Int
    counter InviteCounts @relation(fields: [counterId], references: [id])
    
    expires DateTime?
}

model InviteCounts {
    id Int @id @default(autoincrement())

    userId String
    guildId String
    count Int @default(0)

    invites InviteCode[]

    @@unique([userId, guildId])
}